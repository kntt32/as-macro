import core;

extern fn panic_handler();

pub as panic() {
    panic_handler();
    ud2();
};

pub as panic_eq(in left: b64@reg+mem, in right: b64@reg+mem+imm) {
    let flag: bool@rax;
    if(flag.eq(left, right)) {
        panic();
    };
};

pub as panic_le(in left: b64@reg+mem, in right: b64@reg+mem+imm) {
    let flag: bool@rax;
    if(flag.le(left, right)) {
        panic();
    };
};

pub as panic_ge(in left: b64@reg+mem, in right: b64@reg+mem+imm) {
    let flag: bool@rax;
    if(flag.ge(left, right)) {
        panic();
    };
};

pub as panic_null(in addr: *void@reg+mem) {
    panic_eq(addr, null);
};

