import core;
import core.mem;
import std.syscall;
import std.alloc;
import std.io;

pub extern fn main();

pub static STD_ALLOC: Alloc;
pub static __STDOUT: Out;
pub static __STDERR: Out;

pub fn _start() {
    STD_ALLOC.new();
    __STDOUT.stdout();
    __STDERR.stderr();

    main();

    __STDERR.flush();
    __STDOUT.flush();
    STD_ALLOC.drop();
    let status: i32@rdi;
    status = 0;
    exit(status);
};

pub fn panic_handler(msg: *char@rdi) {
    let str: Str@stack;
    eprintf(str.from("paniced: "));
    eprintfln(str.from(msg));

    let code: i32@rdi = -1;
    exit(code);
};


